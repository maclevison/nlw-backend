{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",

    /* Modules */
    "module": "commonjs",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  }
}
